{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipDock",
  "version": "0.1.0",
  "identifier": "com.jake0lawrence.clipdock",

  "build": {
    "beforeBuildCommand": "pnpm --filter ui build",
    "beforeDevCommand": "pnpm --filter ui dev",
    "devUrl": "http://localhost:5173",     
    "frontendDist": "../ui/build"        
  },

  "app": {
    "windows": [
      {
        "title": "ClipDock",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": { "csp": null }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
